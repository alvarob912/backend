<div class="users-container">
    <h2>Lista de usuarios</h2>
    <table class="users-table">
        <tr>
            <th></th>
            <th class="header">Email</th>
            <th class="header">Rol</th>
            <th class="header">Tipo de acceso</th>
            <th class="header">Ãšltimo acceso</th>
        </tr>
        {{#each usersList}}
        <tr>
            
            <td>{{email}}</td>
            <td>{{role}}</td>
            {{#if github_login}}
                <td>github</td>
                {{else}}
                <td>local</td>
            {{/if}}
            <td>{{last_connection}}</td>
            <td>
                <button onclick="deleteUser(`{{_id}}`)" class="users-btn delete-user-btn">Eliminar</button>
            </td>
            <td>
                <button onclick="changeRole(`{{_id}}`)" class="users-btn change-role-btn">Cambiar rol</button>
            </td>
        </tr>
        {{/each}}
    </table>
    <button onclick="deleteInactive()" class="users-btn delete-inactive-btn">Eliminar usuarios inactivos</button>
</div>

<script src="/statics/js/users.js"></script>